{
  "author": "Plus Pingya <pluspingya@gmail.com>",
  "name": "CoEditForm",
  "description": "Collaborative Editing Form Demo powered by ReactJS and ActionheroJS",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "actionhero": "20.0.0",
    "async": "^3.2.2",
    "ioredis": "latest",
    "winston": "latest",
    "ws": "latest"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "jest": "latest",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.0",
    "standard": "latest"
  },
  "scripts": {
    "start": "actionhero start",
    "server": "npm run start",
    "pretest": "standard",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "clean": "rimraf public/*",
    "cleanbuild": "rimraf client/build/*",
    "copybuild": "ncp client/build/ public/",
    "build": "npm run clean && npm run cleanbuild && npm run build --prefix client && npm run copybuild"
  },
  "standard": {
    "ignore": [
      "public/*",
      "client/*"
    ],
    "globals": [
      "describe",
      "test",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "afterEach",
      "expect"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
